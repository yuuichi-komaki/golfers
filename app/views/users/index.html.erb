<div class="container">
  <div class="row">
    <div class="col-md-10">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>ユーザー名</th>
            <th>投稿数</th>
            <th></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= attachment_image_tag(user, :profile_image, :fill, 80, 80, fallback: "profile_no_image.png", size: '80x80') %></td>
            <td><%= user.name %></td>
            <td><%= user.posts.count %></td>
            <td><td><%= link_to '詳細を見る', user_path(user), class: "user_#{user.id}" %></td></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
