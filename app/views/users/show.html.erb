<% if @user == current_user %>
 <h2>マイページ</h2>
<% else %>
 <h2><%= @user.name %>さんの詳細</h2>
<% end %>

<h4>ユーザー情報</h4>
<table class='table'>
  <tr><%= attachment_image_tag(@user, :profile_image, :fill, 150, 150, fallback: "profile_no_image.png", size: '150x150') %></tr>
  <tr>
	  <th>名前</th>
	  <td><%= @user.name %></td>
  </tr>
  <tr>
	  <th>自己紹介</th>
	  <td><%= @user.introduction %></td>
  </tr>
  <tr>
    <% if @user == current_user %>
    <td><%= link_to '編集する', edit_user_path(@user), class: "btn btn-primary" %></td>
    <% end %>
    </tr>
</table>

<h4>投稿一覧</h4>
<% if @posts.empty? %>
 まだ投稿がありません
<% else %>
<table class="table">
   <thead>
     <tr>
       <th>投稿日</th>
       <th>投稿者</th>
       <th>タイトル</th>
       <th>評価</th>
       <th>レビュー内容</th>
     </tr>
   </thead>
   <% @posts.each do |post| %>
   <tbody>
     <tr>
       <td><%= post.created_at.strftime("%Y/%m/%d") %></td>
       <td><%= post.user.name %></td>
       <td><%= link_to post.title, post_path(post) %>
       </td>
       <td><%= post.rate %>/5.0<div data-turbolinks="false" id="star-rate-<%= post.id %>"></div></td>
       <td><%= post.body %></td>
     </tr>
   </tbody>
  <!--星での表示-->
   <%= render 'layouts/star', post: post %>
    <% end %>
 </table>
 <div><%= paginate @posts, theme: 'twitter-bootstrap-4' %></div>
 <% end %>