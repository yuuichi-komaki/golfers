<div class="container">
  <div class="row my-4">
    <div class="col-md-4 mt-3 mx-auto">
      <h2>新規会員登録</h2>
        <!--render "devise/shared/error_messages", resource: resource %>-->
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
       <%= render 'layouts/error_messages', model: f.object %>
        <table class="table table-borderless table-sm">
          <tr>
            <th>名前</th>
          </tr>
          <tr>
           <td>
            <div class="field">
             <%= f.text_field :name, autofocus: true, placeholder: "ゴルフ太郎", size: 40 %>
            </div>
           </td>
          </tr>
          <tr>
            <th>E-メール</th>
          </tr>
          <tr>
            <td>
             <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "golf@example.com", size: 40 %>
             </div>
            </td>
          </tr>
          <tr>
            <th>パスワード
             <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
             <% end %><br />
            </th>
          </tr>
          <tr>
            <td>
             <div class="field">
              <%= f.password_field :password, autocomplete: "new-password", size: 35 %>
             </div>
            </td>
          </tr>
          <tr>
            <th>パスワード（確認用）</th>
          </tr>
          <tr>
            <td>
             <div class="field">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 35 %>
             </div>
            </td>
          </tr>
          <tr>
            <td>
             <div class="actions mt-2">
              <%= f.submit "新規登録", class: "btn btn-primary btn-block" %>
             </div>
            </td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 mx-auto">
      <p>
        会員登録済みの方は<%= link_to "こちら", new_session_path(resource_name) %>
      </p>
    </div>
  </div>
</div>


