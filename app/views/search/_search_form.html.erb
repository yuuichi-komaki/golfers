
<div class="form-inline mt-2">
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :content, placeholder: "ゴルフ場名を検索", class: "form-control" %>
    <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }), class: "form-control"  %>
    <%= f.submit '検索', class: "btn btn-outline-success" %>
  <% end %>
</div>