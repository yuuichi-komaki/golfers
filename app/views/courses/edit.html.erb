<div class="container">
 <div class="row">
  <div class="col-md-6 mx-auto">
   <h1 class="my-4">コース編集</h1>
    <%= form_with model: @course, local:true do |f| %>
    　<%= render 'layouts/error_messages', model: f.object %>
     <table class="table form-group">
       <tr>
         <td>コース名</td>
         <td><%= f.text_field :name, autocomplete: 'name', placeholder: "ゴルファーズゴルフ場",class: "form-control" %></td>
       </tr>
       <tr>
         <td><%= f.label :postcode, '郵便番号' %></td>
         <td><%= f.text_field :postcode, autocomplete: 'postcode', placeholder: "半角数字・ハイフンなし", class: "form-control" %></td>
       </tr>
       <tr>
         <td><%= f.label :prefecture_name, '都道府県' %></td>
         <td><%= f.collection_select( :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, include_blank: '都道府県') %></td>
       </tr>
       <tr>
         <td><%= f.label :address_city, '市区町村' %></td>
         <td><%= f.text_field :address_city, autocomplete: 'address_city', placeholder: "ゴルフ市ゴルフ町", class: "form-control"  %></td>
       </tr>
       <tr>
         <td><%= f.label :address_street, '番地' %></td>
         <td><%= f.text_field :address_street, autocomplete: 'address_street', placeholder: "１−２−３", class: "form-control"  %></td>
       </tr>
       <tr>
         <td></td>
         <td>
           <%= f.submit "コースを編集する", class: "btn btn-outline-success" %>
           <%= link_to '削除する', course_path(@course), method: :delete, data: {confirm: "本当に削除しますか?"}, class: "btn btn-outline-danger ml-3" %>
         </td>
       </tr>
     </table>
    <% end %>
  </div>
 </div>
</div>
