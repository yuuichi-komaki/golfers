<div class="container">
 <div class="row">
  <div class="col-md-10">
    <h2 class="my-4">投稿一覧</h2>
     <table class="table">
       <thead>
         <tr class="table-success">
           <th>投稿日</th>
           <th>コース名</th>
           <th>投稿者</th>
           <th>タイトル</th>
           <th>レビュー内容</th>
         </tr>
       </thead>
       <% @posts.each do |post| %>
       <tbody>
         <tr>
           <td><%= post.created_at.strftime("%Y/%m/%d") %></td>
           <td>
            <%= link_to course_path(post.course) do %>
             <%= post.course.name %>
            <% end %>
           </td>
           <td>
            <%= link_to user_path(post.user) do %>
             <%= post.user.name %>
            <% end %>
           </td>
           <td>
            <%= link_to post_path(post) do %>
             <%= post.title %>
            <% end %>
            </td>
           <td><%= post.body %></td>
         </tr>
       </tbody>
       <% end %>
     </table>
     <%= paginate @posts, theme: 'twitter-bootstrap-4' %>
  </div>
 </div>
</div>





